extends ../layout

block content

 ul.menu(role='navigation' title='Side Navigation')
     li
      a(href='/projects') Projects
     li
      a(href='/projects/add') Add Project

 .row.column
    h1 Kafferlin Strategies Projects

 .row
    each project in projects
       div.projects.large-4.small-1.columns(data-equalizer-watch)
        ul
            li.image
             img(src="../../uploads/projects/#{project.projectImage}")
            li 
             a(href="/projects/#{project.id}") #{project.projectTitle}
            li #{project.projectClient}
            li #{project.projectDesc}

        ul
            li 
             a(href='../projects/#{project.id}/edit') Edit
            li 
             a(href='') Delete
